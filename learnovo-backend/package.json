  "devDependencies": {
    "eslint": "^8.54.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.1.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "uuid": "^9.0.1"
