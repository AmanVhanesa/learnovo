{
  "name": "learnovo-backend",
  "version": "1.0.0",
  "description": "Learnovo Student Management System Backend",
  "main": "server.js",
  "scripts": {
    "clear:db": "node scripts/clearDatabase.js",
    "start": "node server.js",
    "dev": "nodemon server.js",
    "seed": "node scripts/seedData.js",
    "seed:demo": "node scripts/seedDemoData.js",
    "seed:attendance": "node scripts/seedAttendanceData.js",
    "migrate": "node scripts/migrate.js",
    "migrate:status": "node scripts/migrate.js --status",
    "migrate:rollback": "node scripts/migrate.js --rollback",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:ci": "npm run test:unit && npm run test:integration",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
